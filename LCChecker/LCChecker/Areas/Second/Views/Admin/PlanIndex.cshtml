@using LCChecker.Models
@using LCChecker.Areas.Second
@{
    List<LCChecker.Areas.Second.Models.pProject> list = ViewBag.List;
    Dictionary<string, int> Group = ViewBag.Group;
    ViewBag.Title = "未验收项目";
    Layout = "~/Views/Admin/_Layout.cshtml";
}
<div class="alert alert-warning">
    1、左侧用于上传第二批（第一次）未验收项目<br />
    2、右侧用于上传第二批（补充）未验收项目<br />
</div>

<div style="clear:both;overflow:hidden;margin-bottom:10px;">
    <form class="form form-inline" method="post" enctype="multipart/form-data" action="/Second/Admin/UploadPlan" style="float:left;">
        <div class="input-group">
            <div class="input-group-btn">
                <input type="file" name="file1" class="form-control" />
            </div>
            <div class="input-group-btn">
                <button type="submit" class="btn btn-primary">上传项目</button>
            </div>
        </div>
    </form>
    <form class="form form-inline" method="post" enctype="multipart/form-data" action="/Second/Admin/UploadPlanTwo" style="float:right;">
        <div class="input-group">
            <div class="input-group-btn">
                <input type="file" name="file2" class="form-control" />
            </div>
            <div class="input-group-btn">
                <button type="submit" class="btn btn-primary">上传项目</button>
            </div>
        </div>
    </form>
    <form class="form form-inline" style="float:right;">
        <div class="input-group">
            <span class="input-group-addon">过滤项目</span>
            <select name="city" class="form-control">
                @foreach (City city in Enum.GetValues(typeof(City)))
                {
                    var value = (int)city;
                    <option value="@value" @(Request.QueryString["city"] == value.ToString() ? "selected=selected" : "")>@(city.ToString())</option>
                }
            </select>
            <div class="input-group-btn">
                <select name="result" class="form-control">
                    <option value="0">全部</option>
                    <option value="3" @(Request.QueryString["result"] == "3" ? "selected=selected" : "")>未上传</option>
                    <option value="1" @(Request.QueryString["result"] == "1" ? "selected=selected" : "")>无误</option>
                    <option value="2" @(Request.QueryString["result"] == "2" ? "selected=selected" : "")>存疑</option>
                </select>
            </div>
            <div class="input-group-btn">
                <button type="submit" class="btn btn-primary">过滤</button>
            </div>
        </div>
    </form>
</div>

