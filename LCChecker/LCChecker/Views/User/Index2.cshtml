@using LCChecker.Models;
@{
    ViewBag.Title = "项目清单下载与验证";
}

<table class="table">
    <tr>
        <th>表单名称</th>
        <th>下载地址</th>
        <th style="width: 200px;">上传验证</th>
    </tr>
    @foreach (var title in Enum.GetNames(typeof(CheckFormType)))
    {
        var typeValue = (int)Enum.Parse(typeof(CheckFormType), title);
        <tr>
            <td>@(title)</td>
            <td><a href="/user/downReportExcelIndex@(typeValue)" class="btn btn-sm btn-primary">下载表单</a></td>
            <td>
                @if (typeValue == (int)CheckFormType.重点复核确认项目设计二调新增耕地项目清单)
                { 
                }
                else
                {
                    <form method="post" action="/user/uploadReport?id=@(typeValue)" class="form-inline">
                        <input type="file" name="file@(typeValue)" class="form-control input-sm" style="width: 100px;" />
                        <button type="submit" class="btn btn-sm btn-default">上传验证</button>
                    </form>
                }
            </td>
        </tr>
    }
</table>
