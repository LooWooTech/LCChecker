<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="/content/bootstrap.css" media="screen">
    <link rel="stylesheet" href="/content/bootswatch.min.css" media="screen">
    <link rel="stylesheet" href="/content/main.min.css" media="screen">
    <script src="/scripts/jquery-2.1.1.min.js"></script>
    @{
        LCChecker.Models.User user = ViewBag.CurrentUser;
    }
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">浙江省土地整治项目核查平台</a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="navbar-main">
                <ul class="nav navbar-nav">
                    @RenderSection("nav", false)
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (user != null)
                    {
                        <li><a href="/home/logout">(@(user.Username))退出</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <br />
        <div class="panel panel-default" id="main-panel">
            <div class="panel-heading">
                <h3 class="panel-title">@(ViewBag.Title) </h3>
            </div>
            <div class="panel-body">
                @RenderBody()
            </div>
        </div>
        <footer style="clear: both; overflow: hidden;">
            <div class="row">
                <div class="col-lg-12">
                    &copy;2014 版权所有 @*   杭州陆吾科技信息咨询有限公司 制作*@
                </div>
            </div>
        </footer>
    </div>
</body>
</html>
