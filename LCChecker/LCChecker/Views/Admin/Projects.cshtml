@{
    Layout = "_Layout.cshtml";
    ViewBag.Title = "项目列表";

    List<LCChecker.Models.Project> list = ViewBag.List;
    
}

<table class="table table-bordered">
    <tr>
        <th style="width: 150px">项目编号</th>
        <th>项目名称</th>
        <th style="width: 100px">检验结果</th>
        <th style="width: 300px;">备注</th>
    </tr>
    @foreach (var project in list)
    {
        <tr>
            <td>@(project.ID)</td>
            <td>@(project.Name)</td>
            <td>
                @if (project.Result.HasValue)
                {
                    if (project.Result.Value)
                    {
                    <span class="label label-success">通过</span>
                    }
                    else
                    {
                    <span class="label label-warning">失败</span>
                    }
                }
                else
                {
                    <span class="label label-default">未上传</span>
                }
            </td>
            <td>
                @if (!string.IsNullOrEmpty(project.Note))
                {
                    if (project.Note.Length > 25)
                    { 
                    <a href="#@(project.ID)" class="btn-details" data="@(project.ID)">@(project.Note.Substring(0, 22))..</a>
                    <div id="tips-@(project.ID)" class="tips">
                        @Html.Raw(project.Note.Replace("；", "<br />"))
                    </div>
                    }
                    else
                    {
                    <span>@project.Note</span>
                    }
                }
            </td>
        </tr>
    }
    <tr>
        <td colspan="4">
            @Html.Partial("_pagination", ViewBag.Page as object)
        </td>
    </tr>
</table>
<script>
    $(function () {
        $("body").click(function (e) {
            var target = $(e.target);
            var className = target.attr("class");
            if (className && className.indexOf("btn") > -1) return false;
            $(".tips").hide();
        });
        $(".btn-details").click(function (e) {
            var id = $(this).attr("data");
            $(".tips").hide();
            $("#tips-" + id).show();
        });
    });
</script>
